<div class="container text-center">

<h1>Fill Out Profile</h1>

<%= form_for @player_profile do |f| %>

  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %><br>
  <%= f.text_field :last_name %><br>

  <%= f.label :school %><br>
  <%= f.text_field :school %><br>

  <%= f.label :height %><br>
  <%= f.text_field :height %><br>

  <%= f.label :weight %><br>
  <%= f.text_field :weight %><br>

  <%= f.label :grade_level %><br>
  <%= f.text_field :grade_level %><br>

  <%= f.label :gpa %><br>
  <%= f.text_field :gpa %><br>

  <%= f.label :guardian_phone %><br>
  <%= f.text_field :guardian_phone %><br>

  <%= f.hidden_field :player_id, value: @player_id %>

  <%= f.submit "Create Profile" %>

<% end %>

</div>
