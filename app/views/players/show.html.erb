
<div class="container">
  <div class="row">
    <div class="col-md-12 welcome-bar">
      <h1>Welcome <%= @player.username %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 ath-side-bar">
      <div class=col-md-8>
        <%= image_tag("players/bball_prof.png", :id => "ath-profile-pic") %>
      </div>
      <div class="col-md-8">
        <h3><%= @player.name %></h3>
        <h4><%= @player.school %></h4>
        <h4><%= @player.grade %></h4>
        <h4><%= @player.height %></h4>
        <h4><%= @player.weight %></h4>
        <h4><%= @player.gpa %></h4>
      </div>
    </div>
    <div class="col-md-9 ath-profile-stats">
      <h1>stats</h1>
    </div>
  </div>
</div>
